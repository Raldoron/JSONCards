<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardStyle">

    <RelativeLayout
        style="@style/CardContentStyle">

        <TextView
            android:id="@+id/post_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_id"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <TextView
            android:id="@+id/post_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_title"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/post_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_body"
            android:hint="@string/post_input_hint"
            android:inputType="numberDecimal" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/post_button"
            android:layout_below="@id/post_body"
            android:layout_toRightOf="@id/post_input"
            style="@style/ConfirmButtonStyle"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>