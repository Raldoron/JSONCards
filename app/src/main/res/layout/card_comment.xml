<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    style="@style/CardStyle">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        style="@style/CardContentStyle">

        <TextView
            android:id="@+id/comment_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_id"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_name"/>

        <TextView
            android:id="@+id/comment_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_email"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/comment_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_body"
            android:hint="@string/comment_input_hint"
            android:inputType="numberDecimal" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/comment_button"
            style="@style/ConfirmButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_body"
            android:layout_toRightOf="@id/comment_input" />

    </RelativeLayout>

</android.support.v7.widget.CardView>